<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/tag_max_width"
        tools:text="MainActivity"
        tools:textColor="@color/text_color_debug" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/message_margin_start"
        android:layout_marginStart="@dimen/message_margin_start"
        tools:text="@tools:sample/lorem/random"
        tools:textColor="@color/text_color_debug" />

</FrameLayout>